{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc:watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "tsc:lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "clean",
            "type": "npm",
            "script": "clean",
            "problemMatcher": []
        },
        {
            "label": "tsc:build",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "jest:coverage",
            "type": "npm",
            "script": "coverage",
            "problemMatcher": []
        },
        {
            "label": "tsc:build",
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "test",
            "type": "npm",
            "script": "test",
            "problemMatcher": []
        }
    ]
}