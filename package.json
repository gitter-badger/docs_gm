{
  "name": "docs_gm",
  "version": "1.0.1",
  "description": "The fantastic documentation generator for GameMaker:Studio and GameMaker Studio 2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest",
    "test-only": "jest",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "clean": "rimraf ./dist/",
    "coverage": "jest --coverage",
    "lint": "tslint --project . -t verbose",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhm-ciberman/docs_gm.git"
  },
  "keywords": [
    "gamemaker",
    "gms2",
    "gms1",
    "gms",
    "docs",
    "documentation",
    "generator",
    "game",
    "maker",
    "gms",
    "jsdoc"
  ],
  "author": "Javier \"Ciberman\" Mora",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhm-ciberman/docs_gm/issues"
  },
  "homepage": "https://github.com/jhm-ciberman/docs_gm#readme",
  "bin": {
    "docs_gm": "dist/docs_gm.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": false,
    "mapCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/docs_gm.ts",
      "!src/index.ts",
      "!src/**/*.d.ts"
    ]
  },
  "devDependencies": {
    "@types/commander": "^2.9.1",
    "@types/fs-extra": "^4.0.0",
    "@types/globby": "^0.6.0",
    "@types/jest": "^21.1.6",
    "@types/json5": "0.0.29",
    "@types/minimatch": "^2.0.29",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^8.0.17",
    "@types/nunjucks": "0.0.32",
    "@types/open": "0.0.29",
    "@types/showdown": "^1.4.32",
    "@types/xml2js": "^0.4.0",
    "jest": "^21.2.1",
    "mock-fs": "^4.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "commander": "^2.11.0",
    "comment-parser": "^0.3.2",
    "del": "^3.0.0",
    "fs-extra": "^4.0.1",
    "globby": "^6.1.0",
    "json5": "^0.5.1",
    "minimatch": "^3.0.4",
    "nunjucks": "^3.0.1",
    "open": "0.0.5",
    "showdown": "^1.7.2",
    "xml2js": "^0.4.17"
  }
}
