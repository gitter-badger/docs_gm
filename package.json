{
  "name": "docs_gm",
  "version": "1.0.1",
  "description": "The fantastic documentation generator for GameMaker:Studio and GameMaker Studio 2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "pretest-only": "npm run build",
    "test-only": "npm run unit-tests",
    "unit-tests": "alsatian ./dist/**/*.spec.js",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "clean": "rimraf ./dist/",
    "coverage": "npm run build && nyc --reporter=lcov --reporter=html --all npm run unit-tests && nyc report",
    "lint": "tslint --project . -t verbose",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhm-ciberman/docs_gm.git"
  },
  "keywords": [
    "gamemaker",
    "gms2",
    "gms1",
    "gms",
    "docs",
    "documentation",
    "generator",
    "game",
    "maker",
    "gms",
    "jsdoc"
  ],
  "author": "Javier \"Ciberman\" Mora",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhm-ciberman/docs_gm/issues"
  },
  "homepage": "https://github.com/jhm-ciberman/docs_gm#readme",
  "bin": {
    "docs_gm": "dist/docs_gm.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^4.0.7",
    "@types/globby": "^0.6.0",
    "@types/json5": "0.0.29",
    "@types/minimatch": "^2.0.29",
    "@types/mock-fs": "^3.6.30",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^8.5.8",
    "@types/nunjucks": "0.0.32",
    "@types/open": "0.0.29",
    "@types/showdown": "^1.7.2",
    "@types/xml2js": "^0.4.2",
    "alsatian": "^2.0.0",
    "mock-fs": "^4.4.2",
    "mock-require": "^3.0.1",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "commander": "^2.13.0",
    "comment-parser": "^0.3.2",
    "del": "^3.0.0",
    "docs_gm-basic": "^1.0.0",
    "fs-extra": "^4.0.3",
    "get-installed-path": "^4.0.8",
    "globby": "^6.1.0",
    "json5": "^0.5.1",
    "minimatch": "^3.0.4",
    "nunjucks": "^3.0.1",
    "open": "0.0.5",
    "showdown": "^1.8.6",
    "xml2js": "^0.4.19"
  }
}
