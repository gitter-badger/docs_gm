{
    "author": "Javier \"Ciberman\" Mora",
    "description": "A basic HTML documentation template",
    "web": "https://github.com/jhm-ciberman/docs_gm",
    "defaultDesign": "onepage",
    "designs": {
        "onepage": {
            "name": "One Page",
            "pages": [
                {
                    "in": "index-onepage.njk", 
                    "out": "index.html", 
                    "feedWith": "scripts"
                }
            ]
        },
        "multipage": {
            "name": "Multi Page",
            "pages": [
                {
                    "in": "index-multipage.njk",
                    "out": "index.html",
                    "feedWith": "scripts"
                },
                {
                    "in": "script-multipage.njk",
                    "out": "{{ page.script.name }}.html",
                    "feedWith": "script"
                }
            ]
        }
    }
}
